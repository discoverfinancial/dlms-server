{
    "name": "dlms-server",
    "version": "2.0.2",
    "description": "Document Lifecycle Management Service",
    "main": "build/src/index.js",
    "types": "build/src/index.d.ts",
    "scripts": {
        "clean": "rm -rf ./build && rm -rf ./node_modules",
        "build": "npm install && tsoa spec-and-routes && tsc && npm pack .",
        "build.windows": "npm install && tsoa spec-and-routes && tsc && npm pack .",
        "reimport": "./reimport && npm install && tsoa spec-and-routes && tsc && npm pack .",
        "reimport.windows": "reimport.bat && npm install && tsoa spec-and-routes && tsc && npm pack .",
        "server": "nodemon --exec ts-node src/main.ts serve",
        "server-no-auth": "nodemon --exec ts-node src/main.ts serve",
        "server-basic-auth": "BASIC_AUTH_ENABLED=true nodemon --exec ts-node src/main.ts serve",
        "server-debug": "nodemon --exec  node -r ts-node/register --inspect=0.0.0.0:9229 src/main.ts serve",
        "test": "IDS_ADMIN=admin1 ts-node src/test.ts",
        "test-debug": "IDS_ADMIN=admin1 node -r ts-node/register --inspect-brk src/test.ts",
        "package": "npm pack .",
        "prettify": "prettier --write '**/*.{js,jsx,ts,tsx,css,scss,html,json,md}'",
        "lint": "npx eslint .",
        "lint:fix": "npx eslint . --fix",
        "check": "NODE_TLS_REJECT_UNAUTHORIZED=0 npm-check -u"
    },
    "contributors": [
        "Keith Smith <KeithSmith@discover.com>",
        "Bryce Curtis <BryceCurtis@discover.com>"
    ],
    "license": "MIT",
    "dependencies": {
        "@types/connect-ensure-login": "^0.1.9",
        "@types/cookie-parser": "^1.4.10",
        "@types/express": "^5.0.6",
        "@types/express-session": "^1.18.0",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/multer": "^2.0.0",
        "@types/node": "^24.10.1",
        "@types/node-cron": "^3.0.1",
        "@types/nodemailer": "^7.0.4",
        "@types/passport": "^1.0.16",
        "@types/passport-http": "^0.3.11",
        "@types/passport-local": "^1.0.38",
        "@types/passport-openidconnect": "^0.1.1",
        "@types/swagger-ui-express": "^4.1.3",
        "@types/uuid": "^11.0.0",
        "axios": "^1.13.2",
        "connect-ensure-login": "^0.1.1",
        "cookie-parser": "^1.4.6",
        "dlms-base": "file:dlms-base-2.0.2.tgz",
        "express": "^5.2.1",
        "express-basic-auth": "^1.2.1",
        "express-session": "^1.18.0",
        "fs": "^0.0.2",
        "jsonwebtoken": "^9.0.2",
        "lz-ts": "^1.1.2",
        "mongodb": "^7.0.0",
        "mongoose": "^9.0.0",
        "multer": ">=2.0.2",
        "node": "^20.19.6",
        "node-cron": "^4.2.1",
        "nodemailer": "^7.0.11",
        "passport": "^0.7.0",
        "passport-http": "^0.3.0",
        "passport-local": "^1.0.0",
        "passport-openidconnect": "^0.1.1",
        "proxying-agent": "^2.4.0",
        "swagger-ui-express": "^5.0.1",
        "ts-node": "^10.7.0",
        "tsoa": "^6.6.0",
        "typescript": "^5.9.3",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.48.1",
        "@typescript-eslint/parser": "^8.48.1",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-header": "^3.1.1",
        "nodemon": "^3.1.11",
        "npm-check": "^6.0.1",
        "prettier": "^3.7.4"
    }
}
